{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // 或 "CommonJS"（推荐 Node.js < 16）
    "moduleResolution": "node",
    "esModuleInterop": true, // 必须启用，避免 ES/CJS 互操作问题
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
